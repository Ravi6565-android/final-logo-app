<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/relative"
        >




        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/playbutton"
            android:id="@+id/recycler_item_imageview"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="10dp"

            />
        <TextView
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            android:text="0/5"
            android:layout_centerVertical="true"
            android:id="@+id/recycler_item_levelcnt"
            android:layout_margin="35dp"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:textSize="20sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="level1"
            android:layout_toRightOf="@+id/recycler_item_imageview"
            android:layout_marginVertical="10dp"
            android:id="@+id/recycler_item_text"
            />
        <SeekBar
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_below="@+id/recycler_item_text"
            android:layout_toRightOf="@+id/recycler_item_imageview"
            android:progress="0"
            android:id="@+id/recycler_item_progressbar"
/>
    </RelativeLayout>

</LinearLayout>